<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="336dp"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/white"
        android:focusable="true"
        android:checkable="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/supernatural">
            <Button
                android:id="@+id/containedIconButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/play"/>
            <TextView
                android:id="@+id/filmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:text="@string/FilmName"
                android:background="@color/cardview_dark_background"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/headerSelectPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginTop="20dp"
        android:text="@string/headerPart"
        android:textColor="@color/black"/>


    <com.google.android.material.slider.RangeSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerSelectPart"
        android:layout_marginTop="10dp"
        android:valueFrom="1"
        android:valueTo="24"
        android:stepSize="1"
        app:values="@array/initial_slider_values"
        app:trackColorActive="@android:color/holo_orange_dark"
        app:trackColorInactive="@android:color/holo_green_dark"
        app:thumbColor="@android:color/holo_blue_light"
        app:tickColorActive="@android:color/holo_blue_dark"
        app:tickColorInactive="@android:color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selectedPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="@string/series"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descSelectedPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedPart"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:text="Пример"
        android:background="@color/white"
        app:strokeColor = "@color/black"
        app:strokeWidth = "1dp"
        style="?attr/materialButtonOutlinedStyle"/>


</androidx.constraintlayout.widget.ConstraintLayout>